<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId"
                access="global">
    
    <aura:attribute name="name" type="String" default="tileName" />

    <aura:attribute name="spinner" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div>
        <article class="slds-card">
            <div class="slds-card__header slds-grid">
                <aura:if isTrue="{!v.spinner}">
                    <lightning:spinner variant="brand" aura:id="mySpinner" size="small" />
                </aura:if>
                <header class="slds-media slds-media_center slds-has-flexi-truncate slds-p-top_x-small">
                    <div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon" title="">
                            <lightning:icon iconName="standard:apps" title="More options" size="medium" alternativeText="Apps"/>
                            <span class="slds-assistive-text">{!v.name}</span>
                        </span>
                    </div>
                    <div class="slds-media__body">
                        <h2>
                            
                                <a class="slds-card__header-link slds-truncate" href="javascript:void(0);"  title="View all Apps">
                                    <span class="slds-text-heading_small">{!v.name}</span>
                                </a>
                        </h2>
                    </div>
                </header>
            </div>
            <div class="slds-card__body">
                    <ul class="slds-grid slds-wrap">
                        
                            <li class="slds-p-horizontal_small slds-size_1-of-1">
                                <article class="slds-tile slds-media slds-card__tile slds-hint-parent">
                                    <div class="slds-media__body">
                                        
                                        <div class="slds-grid slds-grid_align-spread slds-has-flexi-truncate">
                                            <h3 class="slds-truncate" title="">
                                                <a href="#" target="_blank" title="Sample">
													Sample
                                                </a>
                                            </h3>
                                        </div>
                                        <div class="slds-tile__detail slds-text-body_small">
                                            <dl class="slds-list_horizontal slds-wrap">
                                                <dt class=" slds-text-color_weak slds-size_6-of-12" title="Configuration Item">Configuration Item</dt>
                                                <dd class="slds-item_detail slds-truncate slds-size_6-of-12" title="Sample1">Sample1</dd>
                                            </dl>
                                                <dl class="slds-list_horizontal slds-wrap">
                                                    <dt class=" slds-text-color_weak slds-size_6-of-12" title="Case Number">Case</dt>
                                                    <dd class="slds-item_detail slds-truncate slds-size_6-of-12" title="Sample2">Sample2</dd>
                                                </dl>
                                        </div>
                                    </div>
                                </article>
                            </li>
                    </ul>
            </div>
        </article> 
    </div>
</aura:component>